\newcommand{\curveNormal}[2][]{ %
	\pgfkeys{/cnorm, default, #1}
	\coordinate (O) at (\x, {#2});
	\edef\x{\x + 0.1}
	\coordinate (OD) at (\x, {#2});
	\draw[->, /cnorm/remainingkeys] (O) -- ($(O)!\cnlen!90:(OD)$);
}


